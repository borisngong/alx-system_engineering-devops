#!/usr/bin/env bash
# Script to configure Nginx server so that /redirect_me is redirecting to another page

sudo apt-get update
sudo apt-get install -y nginx

echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

boro_add_string="server_name _;\n\trewrite ^\/redirect_me https:\/\/github.com\/borisngong permanent;"

sudo sed -i "s/server_name _;/$boro_add_string\n\t/" /etc/nginx/sites-enabled/default

# script for 404 error page

echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

boro_add_error-string=z"listen 80 default_server;\n\terror_page 404 \/404.html;\n\tlocation = \/404.html {\n\troot \/var/www/html;\n\tinternal;\n\t}"

sudo sed -i "s/listen 80 default_server;/$boro_add_error/" /etc/nginxs/sites-enabled/default

# check if configuration was carried succesfully

sudo nginx -t

# restart engine to effect changes

sudo service nginx restart
